<ScrollView
               xmlns:android="http://schemas.android.com/apk/res/android"
   		 xmlns:tools="http://schemas.android.com/tools"
             android:id="@+id/scrollView1"
             android:layout_width="match_parent"
             android:layout_height="wrap_content" >
    <LinearLayout

   		 android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin"
	    tools:context=".HomeActivity" >


             

       <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:layout_marginTop="40dp"
            android:gravity="center">

            <ImageButton
                android:id="@+id/login_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
              
                android:background="@null"
                android:src="@drawable/back" />

            <TextView
                android:id="@+id/projectNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center"
                android:fontFamily="sans-serif"
                android:text="@string/today"
                android:textColor="#063A70"
                android:textSize="32sp"
                />
     
            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="@null"
                android:src="@drawable/next" />

        </LinearLayout>
        
        <TextView
            android:id="@+id/confirmedIndicator"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="@string/confirmed_icon"
            android:visibility="invisible"
            android:textColor="@color/calender_green" />
        	

        <View
            android:id="@+id/view1"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_marginTop="50dp"
            android:background="#DB8C0C"
             />
	
        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-thin"
            android:text="@string/project"
            android:textSize="32sp" />
        
        <View
            android:id="@+id/view2"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#DB8C0C" />

        <ListView
            android:id="@+id/projectListView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:paddingTop="40dp"
	 		android:paddingBottom="50dp"
            android:paddingLeft="70dp"
            android:paddingRight="70dp" >

        </ListView>

        

        <Button
            android:id="@+id/report_time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop ="30dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_weight="0"
            android:fontFamily="sans-serif-thin"
            android:textColor="#063A70"
            android:text="@string/report_time"
            android:textSize="32sp" />



</LinearLayout>
</ScrollView>
