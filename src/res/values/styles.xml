    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarItemBackground">@drawable/selectable_background_combitechstyle</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Combitechstyle</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Combitechstyle</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Combitechstyle</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Combitechstyle</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Combitechstyle</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_combitechstyle</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_combitechstyle</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Combitechstyle</item>
        
