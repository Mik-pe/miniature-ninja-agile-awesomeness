    <style name="ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
	    <item name="android:background">@color/combitech_blue</item>
	    <item name="android:backgroundStacked">@color/combitech_grey</item>
	    <item name="android:backgroundSplit">@color/combitech_blue</item>
	</style>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        
    </style>
    

 

    <style name="ActionBar.Solid.Combitechstyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_solid_combitechstyle</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_combitechstyle</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_combitechstyle</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Combitechstyle</item>
        <item name="android:layout_width">20dp</item>
    </style>

    <style name="ActionBar.Transparent.Combitechstyle" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/ab_transparent_combitechstyle</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Combitechstyle</item>
        <item name="android:layout_width">20dp</item>
    </style>

    <style name="PopupMenu.Combitechstyle" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_combitechstyle</item>	
    </style>

    <style name="DropDownListView.Combitechstyle" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_combitechstyle</item>
    </style>

    <style name="ActionBarTabStyle.Combitechstyle" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_combitechstyle</item>
    </style>

    <style name="DropDownNav.Combitechstyle" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_combitechstyle</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_combitechstyle</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_combitechstyle</item>
    </style>
    
    <style name="ProgressBar.Combitechstyle" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_combitechstyle</item>
    </style>
    
    <style name="ActionButton.CloseMode.Combitechstyle" parent="@android:style/Widget.Holo.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_combitechstyle</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
